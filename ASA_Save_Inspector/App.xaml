<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="ASA_Save_Inspector.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:primitives="using:CommunityToolkit.WinUI.UI.Controls.Primitives"
    xmlns:local="using:ASA_Save_Inspector">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
            </ResourceDictionary.MergedDictionaries>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Default">
                    <AcrylicBrush x:Key="MyAcrylicBrush"
                                  TintColor="#70000000"
                                  TintOpacity="0.3"
                                  TintLuminosityOpacity="0.5"
                                  Opacity="0.3"
                                  FallbackColor="#700c0c14"/>
                    <AcrylicBrush x:Key="MyAcrylicBrushDarker"
                                  TintColor="#C0000000"
                                  TintOpacity="0.5"
                                  TintLuminosityOpacity="0.5"
                                  Opacity="0.5"
                                  FallbackColor="#C00c0c14"/>

                    
                </ResourceDictionary>

                <ResourceDictionary x:Key="HighContrast">
                    <AcrylicBrush x:Key="MyAcrylicBrush"
                                  TintColor="#C0000000"
                                  TintOpacity="0.3"
                                  TintLuminosityOpacity="0.5"
                                  Opacity="0.3"
                                  FallbackColor="#C00c0c14"/>
                    <AcrylicBrush x:Key="MyAcrylicBrushDarker"
                                  TintColor="#F0000000"
                                  TintOpacity="0.5"
                                  TintLuminosityOpacity="0.5"
                                  Opacity="0.5"
                                  FallbackColor="#F00c0c14"/>
                </ResourceDictionary>

                <ResourceDictionary x:Key="Light">
                    <AcrylicBrush x:Key="MyAcrylicBrush"
                                  TintColor="#70000000"
                                  TintOpacity="0.3"
                                  TintLuminosityOpacity="0.5"
                                  Opacity="0.3"
                                  FallbackColor="#700c0c14"/>
                    <AcrylicBrush x:Key="MyAcrylicBrushDarker"
                                  TintColor="#C0000000"
                                  TintOpacity="0.5"
                                  TintLuminosityOpacity="0.5"
                                  Opacity="0.5"
                                  FallbackColor="#C00c0c14"/>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
