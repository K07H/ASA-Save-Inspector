<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="ASA_Save_Inspector.Pages.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ASA_Save_Inspector.Pages"
    xmlns:asi="using:ASA_Save_Inspector"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontSize="16">

    <Grid>
        <StackPanel Margin="4">
            <TextBlock Text="{x:Bind asi:ASILang.Get('About'), Mode=OneWay}" Style="{ThemeResource TitleLargeTextBlockStyle}" Margin="42,0,0,0" TextWrapping="WrapWholeWords"/>
            <StackPanel Orientation="Vertical" Margin="10,15,0,0">
                <TextBlock x:Name="tb_AppName" FontSize="18" TextWrapping="WrapWholeWords"><Run Text="{x:Bind asi:ASILang.Get('Name'), Mode=OneWay}"/>: <Run Text="{x:Bind local:AboutPage.AppName, Mode=OneWay}"/> (<Run Text="{x:Bind local:AboutPage.AppAcronym, Mode=OneWay}"/>)</TextBlock>
                <TextBlock x:Name="tb_Version" FontSize="18" TextWrapping="WrapWholeWords"><Run Text="{x:Bind asi:ASILang.Get('Version'), Mode=OneWay}"/>: <Run Text="{x:Bind local:AboutPage.AppVersion, Mode=OneWay}"/></TextBlock>
                <TextBlock FontSize="18" TextWrapping="WrapWholeWords"><Run Text="{x:Bind asi:ASILang.Get('Author'), Mode=OneWay}"/>: OSubMarin</TextBlock>
                <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                    <Image Source="ms-appx:///Assets/ASILogo.png" Width="96" Height="96"></Image>
                    <StackPanel Orientation="Vertical" Margin="10,0,0,0" VerticalAlignment="Center">
                        <TextBlock TextWrapping="WrapWholeWords"><Run FontWeight="Bold" Text="{x:Bind local:AboutPage.AppName, Mode=OneWay}"/> <Run Text="{x:Bind asi:ASILang.Get('ASI_Description_Line1'), Mode=OneWay}"/></TextBlock>
                        <TextBlock TextWrapping="WrapWholeWords"><Run Text="{x:Bind asi:ASILang.Get('ASI_Description_Line2'), Mode=OneWay}"/></TextBlock>
                        <TextBlock TextWrapping="WrapWholeWords"><Run Text="{x:Bind asi:ASILang.Get('ASI_Description_Line3'), Mode=OneWay}"/></TextBlock>
                        <TextBlock TextWrapping="WrapWholeWords"><Hyperlink NavigateUri="https://github.com/K07H/ASASaveInspector">https://github.com/K07H/ASASaveInspector</Hyperlink></TextBlock>
                    </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Image Source="ms-appx:///Assets/ArkParserIcon96.png" Width="96" Height="96"></Image>
                    <StackPanel Orientation="Vertical" Margin="10,0,0,0" VerticalAlignment="Center">
                        <TextBlock TextWrapping="WrapWholeWords"><Run Text="{x:Bind asi:ASILang.Get('ArkParse_Description_Line1'), Mode=OneWay}"/> <Run FontWeight="Bold">ArkParse</Run>.</TextBlock>
                        <TextBlock TextWrapping="WrapWholeWords"><Run Text="{x:Bind local:AboutPage.AppName, Mode=OneWay}"/> <Run Text="{x:Bind asi:ASILang.Get('ArkParse_Description_Line2'), Mode=OneWay}"/></TextBlock>
                        <TextBlock TextWrapping="WrapWholeWords"><Run Text="{x:Bind asi:ASILang.Get('ArkParse_Description_Line3'), Mode=OneWay}"/></TextBlock>
                        <TextBlock TextWrapping="WrapWholeWords"><Hyperlink NavigateUri="https://github.com/VincentHenauGithub/ark-save-parser">https://github.com/VincentHenauGithub/ark-save-parser</Hyperlink></TextBlock>
                    </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Image Source="ms-appx:///Assets/ASALogo256.png" Width="96" Height="96"></Image>
                    <StackPanel Orientation="Vertical" Margin="10,0,0,0" VerticalAlignment="Center">
                        <TextBlock TextWrapping="WrapWholeWords"><Run Text="{x:Bind asi:ASILang.Get('ASA_Description_Line1'), Mode=OneWay}"/> <Run FontWeight="Bold">ARK Survival Ascended</Run>.</TextBlock>
                        <TextBlock TextWrapping="WrapWholeWords"><Run Text="{x:Bind asi:ASILang.Get('ASA_Description_Line2'), Mode=OneWay}"/></TextBlock>
                        <TextBlock TextWrapping="WrapWholeWords"><Hyperlink NavigateUri="https://survivetheark.com/">https://survivetheark.com</Hyperlink></TextBlock>
                    </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Image Source="ms-appx:///Assets/DiscordIcon96.png" Width="96" Height="96"></Image>
                    <StackPanel Orientation="Vertical" Margin="10,0,0,0" VerticalAlignment="Center">
                        <TextBlock TextWrapping="WrapWholeWords"><Run Text="{x:Bind asi:ASILang.Get('Discord_Description_Line1'), Mode=OneWay}"/> <Run FontWeight="Bold">Discord</Run></TextBlock>
                        <TextBlock TextWrapping="WrapWholeWords"><Hyperlink NavigateUri="https://discord.gg/dPgTprNyn9">https://discord.gg/dPgTprNyn9</Hyperlink></TextBlock>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
